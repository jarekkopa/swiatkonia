              <p>
                <a href="{{path('advert_add')}}" class="btn btn-primary my-2">Dodaj</a>
              </p>
            {% endif %}
      </div>
    </section>


    <div class="container">
      <div class="row">

        <div class="col-2">
            {% include 'category_menu.html.twig' %}
        </div>

        <div class="col-10">
          {% block content %} {% endblock %}
        </div>

      </div>
    </div>

  </main>

  <footer class="text-muted">
    <div class="container">
      <p class="float-right">
        <a href="#">Back to top</a>
      </p>
