<!doctype html>
<html lang="pl">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="icon" href="../../../../favicon.ico"> {% block title %} {% endblock %}

  <!-- Bootstrap core CSS -->
  <link href="{{asset('bootstrap/css/bootstrap.min.css')}}" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="album.css" rel="stylesheet">
</head>

<body>

  <header>
    {% include 'topnav.html.twig' %}
  </header>

  <main role="main">
    {% if is_granted('ROLE_USER') %}
    <section class="jumbotron text-center">
      <div class="container">
        <h1 class="jumbotron-heading">Dodaj ogłoszenie do bazy SwiatKonia.pl</h1>
        <p class="lead text-muted">Dodaj darmowe ogłoszenie do naszej bazy ogłoszen jeździeckich SwiatKonia.pl</p>
        <p>
          <a href="/advert/new" class="btn btn-primary my-2">Dodaj</a>
          <!--<a href="#" class="btn btn-secondary my-2">Secondary action</a>-->
        </p>
      </div>
    </section>
    {% endif %} {% block content %} {% for adv in advert %}
    <div class="album py-2 bg-light">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="card mb-4 box-shadow">
              <div class="card-body">
                <div class="row">
                  <div class="col-2">
                    <img class="card-img-right flex-auto d-none d-lg-block" src="img/{{ adv.getImageName }}" height="90" width="150" />
                  </div>
                  <div class="col-10">
                    <div class="card-text">
                      <div>
                        <h4>{{ adv.getAdvTitle }} </h4>
                        <a href="#" class="badge badge-success">KATEGORIA: {{ adv.getAdvCategory|upper }}</a>
                      </div>
                    </div>
                    <p class="card-text">{{ adv.getAdvDescription }}</p>
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary">
                          <a href="advert/show/{{ adv.getId }}">View</a>
                        </button>
                      </div>
                      <small class="text-muted">ID ogłoszenia: {{ adv.getId }} | Dodano: [ tu data ]</small>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>
          {% else %} Brak ogłoszen. {% endfor %}
        </div>
      </div>
    </div>
    {% else %} Brak ogłoszen. {% endfor %} {% endblock %}
  </main>


  <footer class="text-muted">
    <div class="container">
      <p class="float-right">
        <a href="#">Back to top</a>
      </p>
      <p>Swiatkonia.pl &copy; Wszelkie prawa zastrzeżone</p>
    </div>
  </footer>

  <!-- Bootstrap core JavaScript
    ================================================== -->
  <!-- Placed at the end of the document so the pages load faster -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script>
    window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')
  </script>
  <script src="{{asset('bootstrap/js/bootstrap.min.js')}}"></script>

</body>

</html>