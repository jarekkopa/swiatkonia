{% extends 'base.html.twig' %} {% block title %}{% endblock %} {% block content %} {% for adv in advert %}
<div class="album py-2 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top">
                    <div class="card-body">
                        <div class="row">
                        <div class="col-2">
                            <img class="card-img-right flex-auto d-none d-lg-block" src="../img/{{ adv.getImageName }}" height="90" width="150" />
                        </div>
                        <div class="col-10">
                        <div class="card-text">
                            <div>
                                <h4>{{ adv.getAdvTitle }} </h4>
                                <a href="#" class="badge badge-success">KATEGORIA: {{ adv.getAdvCategory|upper }}</a>
                            </div>
                        </div>
                        <p class="card-text">{{ adv.getAdvDescription }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary"><a href="advert/show/{{ adv.getId }}">View</a></button>
                                <button type="button" class="btn btn-sm btn-outline-secondary"><a href="edit/{{ adv.getId }}">Edit</a></button>
                                <button type="button" class="btn btn-sm btn-outline-secondary"><a href="#">Activate</a></button>
                                <button type="button" class="btn btn-sm btn-outline-secondary"><a href="#">Deactivate</a></button>
                                <button type="button" class="btn btn-sm btn-outline-secondary"><a href="#">Remove</a></button>
                            </div>
                            <small class="text-muted">ID ogłoszenia: {{ adv.getId }} | Dodano: [ tu data ]</small>
                        </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% else %} Brak ogłoszen. {% endfor %} {% endblock %}