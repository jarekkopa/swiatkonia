{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

  {% block content %}

    {% for adv in advert %} 
      <div class="album py-2 bg-light">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" >
                <div class="card-body">
                    <div class="card-text"> 
                        <div>
                          <h4>{{ adv.getAdvTitle }} </h4>
                          <a href="#" class="badge badge-success">KATEGORIA: {{ adv.getAdvCategory|upper }}</a>
                        </div>
                    </div>
                  <p class="card-text">{{ adv.getAdvDescription }}</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary"><a href="advert/show/{{ adv.getId }}">View</a></button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                      
                    </div>
                    <small class="text-muted">9 mins</small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% else %}
        Brak og≈Çoszen.
    {% endfor %}
  {% endblock %}
{% endblock %}