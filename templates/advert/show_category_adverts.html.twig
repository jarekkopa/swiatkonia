{% extends 'base.html.twig' %} {% block title %}{% endblock %} {% block content %}

<div class="container">

    <div class="card-deck">
    <div class="row">
        {% for adv in advert %} {# wyświetlam tylko aktywne ogłoszenia - mające status isActive = true #} {% if adv.isActive %}
        <div class="card" style="min-width: 17rem; max-width: 17rem; margin-bottom: 10px;">
            <img class="card-img-top" src="{{ asset('img/') }}{{ adv.getImageName }}" style="max-height: 10rem;" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title"> {{ adv.getAdvTitle|slice(0, 18) }}</h5>
                <p class="card-text">{{ adv.getAdvDescription|slice(0, 100) }}</p>
                <p class="card-text">
                    {% if adv.getAdvCategory.getId == "1" %}
                        <a href="{{ path('adverts_category', {'id': adv.getAdvCategory.getId }) }} " class="badge badge-primary">KATEGORIA: {{ adv.getAdvCategory|upper }}</a>
                    {% elseif adv.getAdvCategory.getId == "2" %}
                        <a href="{{ path('adverts_category', {'id': adv.getAdvCategory.getId }) }} " class="badge badge-danger">KATEGORIA: {{ adv.getAdvCategory|upper }}</a>
                    {% elseif adv.getAdvCategory.getId == "3" %}
                        <a href="{{ path('adverts_category', {'id': adv.getAdvCategory.getId }) }} " class="badge badge-warning">KATEGORIA: {{ adv.getAdvCategory|upper }}</a>
                    {% elseif adv.getAdvCategory.getId == "4" %}
                        <a href="{{ path('adverts_category', {'id': adv.getAdvCategory.getId }) }} " class="badge badge-dark">KATEGORIA: {{ adv.getAdvCategory|upper }}</a>
                    {% endif %}
                </p>
                <p>
                    <medium class="text-info">Dodano: {{ adv.getPublishDate.format('d-m-Y') }}</medium>
                </p>
                <a href="advert/show/{{ adv.getId }}" class="btn btn-primary">Zobacz</a>
                               
            </div>
        </div>
        {% endif %} {% else %} Brak ogłoszen. {% endfor %}
    </div>
    </div>
</div>
{% endblock %}